                                li Email: legal@wavedating.com
                                li Support: pyoo@wavedatingapp.com
                            
                            .text-center.mt-5
                                a.btn.btn-primary.rounded-pill(href='index.html') Back to Home

        // Footer
        footer.bg-black.text-center.py-5
            .container.px-5
                .text-white-50.small
